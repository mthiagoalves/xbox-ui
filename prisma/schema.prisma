// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id String @id @default(uuid())
  name String @unique
  year Int
  description String
  multiplayer String
  studio String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id String @id @default(uuid())
  genre String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
